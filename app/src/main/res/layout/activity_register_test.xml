<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".RegisterTest"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/header"

        android:layout_width="match_parent"
        android:layout_height="150dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="match_parent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo" />
    </RelativeLayout>
    <RelativeLayout
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:layout_width="220dp"
        android:layout_height="520dp"

        tools:ignore="MissingConstraints"
        android:background="@drawable/shape_right_panel">

    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/llLoginPanel"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:background="@drawable/shape_login_panel"
        android:layout_height="400dp"
        android:paddingTop="20dp"
        android:paddingLeft="50dp"

        android:paddingRight="50dp"
        android:orientation="vertical"
        >
        <EditText
            android:drawableRight="@drawable/person"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="text"
            android:id="@+id/name"
            android:textColorHint="@color/purple_700"
            android:hint="اسم و فامیل" />

        <EditText
            android:drawableRight="@drawable/person"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="text"
            android:textColorHint="@color/purple_700"
            android:id="@+id/codemelipersoneli"
            android:hint="کد پرسنل/کد ملی" />
        <EditText
            android:drawableRight="@drawable/person"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="numberPassword"
            android:textColorHint="@color/purple_700"
            android:id="@+id/phone"
            android:hint="شماره موبایل" />
        <EditText
            android:drawableRight="@drawable/key"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="رمز ورود"
            android:id="@+id/password"
            android:textColorHint="@color/purple_700"
            android:inputType="numberPassword"
            />

        <EditText
            android:drawableRight="@drawable/key"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="تایید رمز ورود"
            android:id="@+id/confirmpassword"
            android:textColorHint="@color/purple_700"
            android:inputType="numberPassword"
            />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="151dp"
        android:layout_height="49dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shape_login_button"
        android:text="ثبت نام"
        android:id="@+id/signup_ss"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/llLoginPanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/tvLogin"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="20sp"
        android:textColor="@color/purple_700"
        app:layout_constraintTop_toBottomOf="@id/header"/>
    <TextView
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40dp"
        android:layout_marginTop="25dp"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/signup"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/header"
        tools:ignore="MissingConstraints" />



</androidx.constraintlayout.widget.ConstraintLayout>