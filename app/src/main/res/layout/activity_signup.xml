    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="148dp"
        android:layout_marginTop="40dp"

        android:text="ثبت نام"
        android:textColor="@color/purple_700"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/get_name_family"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="28dp"
        android:layout_marginTop="310dp"

        android:background="@drawable/sms_drawable"
        android:ems="10"
        android:hint="اسم"

        android:inputType="text"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="@color/purple_700"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="0dp"
        android:layout_gravity="center"
        android:textColorHint="@color/purple_700"
            app:boxCornerRadiusBottomEnd="55dp"
        app:boxCornerRadiusBottomStart="55dp"
        app:boxCornerRadiusTopEnd="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:hintAnimationEnabled="false"
        app:passwordToggleEnabled="true"
        android:layout_marginTop="550dp"
        tools:ignore="MissingConstraints">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:background="@drawable/sms_drawable"

            android:textSize="20dp"
            android:hint="پسورد"
            />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="0dp"
        android:layout_gravity="center"
        android:textColorHint="@color/purple_700"
        app:layout_constraintTop_toTopOf="parent"
        app:passwordToggleEnabled="true"
        app:boxCornerRadiusBottomStart="55dp"
        app:hintAnimationEnabled="false"
        app:boxCornerRadiusTopEnd="55dp"
        android:layout_marginTop="610dp"
        tools:ignore="MissingConstraints">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:background="@drawable/sms_drawable"
            android:hint="تایید پسورد"
            />


    </com.google.android.material.textfield.TextInputLayout>


    <EditText
        android:id="@+id/get_username2"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="28dp"
        android:layout_marginTop="488dp"
        android:background="@drawable/sms_drawable"
        android:ems="10"
        android:hint="کد پرسنلی"
        android:inputType="text"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="@color/purple_700"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:passwordToggleEnabled="true"
        tools:ignore="MissingConstraints" />



    <EditText
        android:id="@+id/get_phonenumber"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="28dp"
        android:layout_marginTop="428dp"
        android:background="@drawable/sms_drawable"
        android:ems="10"
        android:hint="کد ملی"
        android:inputType="text"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="@color/purple_700"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/haveaccount2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="768dp"
        android:text="ایا اکانت دارید؟واردشوید"
        android:textColor="@color/purple_700"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signup2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="692dp"
        android:background="@drawable/sms_drawable2"
        android:text="ثبت نام"
        android:textColor="#000"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/get_email"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="28dp"
        android:layout_marginTop="370dp"
        android:background="@drawable/sms_drawable"
        android:ems="10"
        android:hint="فامیل"
        android:inputType="text"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="@color/purple_700"

        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <RadioGroup
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/doctor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/sms_drawable2"
            android:textSize="20dp"
            android:text="دکتر" />

        <RadioButton
            android:id="@+id/nurse"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/sms_drawable2"
            android:textSize="20dp"
            android:text="پرستار" />

        <RadioButton
            android:id="@+id/patient"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:background="@drawable/sms_drawable2"
            android:text="مریض" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>